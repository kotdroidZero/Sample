<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    tools:context="com.error_found.pk.sample.NewDesigns.GmailActivity">
    <include
        layout="@layout/gmail_main_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
<android.support.design.widget.NavigationView

    app:menu="@menu/menu_gmail"
    android:fitsSystemWindows="true"
    app:itemTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:id="@+id/nav_view"
    app:itemBackground="@drawable/nav_selector_bg"
    app:headerLayout="@layout/header_gmail"
    android:layout_gravity="start"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
