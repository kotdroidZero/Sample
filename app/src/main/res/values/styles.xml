<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CardViewForEditText">
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
        <item name="android:radius">@dimen/two_dp</item>
        <item name="android:elevation">@dimen/four_dp</item>
        <item name="android:background">@drawable/white_cornered_bg</item>

    </style>
    <style name="WhiteBGEditTextDisabledText">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/colorDisabled</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/eight_dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>
